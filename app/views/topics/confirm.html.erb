<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <h3>以下の内容で送信する</h3>

    <%= form_for(@topic) do |f| %>
      <%= f.hidden_field :title %>
      <%= f.hidden_field :content %>
      <p>タイトル：<%= @topic.title %></p>
      <p>内容：<%= @topic.content %></p>
      <%= f.submit "登録する", class:'btn btn-success' %>
    <% end %>
    <%= form_for(@topic, url: new_topic_path, method: 'get') do |f| %>
      <%= f.hidden_field :title %>
      <%= f.hidden_field :content %>
      <%= f.submit "戻る", name:'back', class:'btn btn-danger' %>
    <% end %>
  </div>
</div>
