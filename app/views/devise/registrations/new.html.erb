<div class="container">
  <div class="wrapper col-md-6 col-md-offset-2 col-sm-10">
    <h2>サインアップ</h2>

    <%= alert %>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレス" %>
      </div>

      <div class="field">
        <%= f.text_field :name, class: "form-control", placeholder: "名前" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "パスワード（確認用)" %>
      </div>

      <div class="actions">
        <%= f.submit "サインアップ", class: 'btn btn-block btn-success' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
